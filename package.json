{
  "name": "openclaw-feishu-edition",
  "version": "1.0.0",
  "description": "OpenClaw 飞书专版 - 面向中国用户的傻瓜式 AI 助手",
  "main": "dist/electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "prepare-bundle": "bash scripts/prepare-bundle.sh",
    "prepare-bundle:x64": "bash scripts/prepare-bundle.sh x64",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run prepare-bundle && npm run build && electron-builder --mac",
    "dist:mac:nobundle": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "@rollup/rollup-linux-arm64-gnu": "^4.57.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.openclaw.feishu-edition",
    "productName": "OpenClaw飞书专版",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "OpenClaw 飞书专版",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "bundled/node",
        "to": "bundled/node",
        "filter": ["**/*"]
      },
      {
        "from": "bundled/engine",
        "to": "bundled/engine",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "release"
    }
  }
}
